<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:weightSum="6"
    android:orientation="vertical">


        <TextView
            android:id="@+id/day_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day_view2"
            android:text="Negombo,LK"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:id="@+id/Cityname2"
            android:paddingTop="5dp"
            android:textAlignment="center"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/Cityname2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/w01d"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Cityname2"
        android:id="@+id/icon2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="31'C"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:id="@+id/temperature_view2"
        android:layout_below="@id/icon2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sky is Clear"
        android:textAlignment="center"
        android:textStyle="italic|bold"
        android:id="@+id/discription_view2"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/temperature_view2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Min 29'C"
        android:paddingTop="10dp"
        android:id="@+id/min"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/discription_view2"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max 31'C"
        android:textColor="@color/colorPrimary"
        android:id="@+id/Max"
        android:layout_below="@id/min"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Humidity 70.00%"
        android:id="@+id/humidity"
        android:layout_below="@id/Max"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pressure 101.52"
        android:id="@+id/pressure"
        android:layout_below="@id/humidity"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>